name:                AstPlugin
version:             0.1.0.0
synopsis:            GHC plugin to spit out ASTs
-- description:         
homepage:            http://chriswarbo.net/git/ast-plugin
license:             PublicDomain
license-file:        LICENSE
author:              Chris Warburton
maintainer:          chriswarbo@gmail.com
-- copyright:           
category:            Language
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     AstPlugin.Plugin
                     , AstPlugin.Internal
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.9
                     , ghc
                     , HS2AST
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite pure
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      tests
  main-is:             Pure.hs
  build-depends:       base >= 4.7
                     , AstPlugin
                     , HS2AST
                     , QuickCheck
                     , tasty >= 0.7
                     , tasty-quickcheck
